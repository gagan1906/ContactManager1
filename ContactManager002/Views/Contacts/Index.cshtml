@model IEnumerable<ContactManager002.Models.Contact>

@{
    ViewData["Title"] = "Contacts";
    Layout = "_Layout"; // Ensure this matches your layout file name
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <div class="mb-3">
        <a asp-controller="Contacts" asp-action="Create" class="btn btn-primary">Add New Contact</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Model)
                {
                    <tr>
                        <td>@contact.FirstName</td>
                        <td>@contact.LastName</td>
                        <td>@contact.Phone</td>
                        <td>@contact.Email</td>
                        <td>@contact.Category</td>
                        <td>
                            <a asp-controller="Contacts" asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-controller="Contacts" asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
