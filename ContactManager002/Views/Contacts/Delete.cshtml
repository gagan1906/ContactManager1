@model ContactManager002.Models.Contact

@{
    ViewData["Title"] = "Delete Contact";
    Layout = "_Layout"; // Ensure this matches your layout file name
}

<h1>Delete Contact</h1>

<div class="alert alert-danger">
    <h4 class="alert-heading">Warning!</h4>
    <p>Are you sure you want to delete this contact?</p>
</div>

<dl class="row">
    <dt class="col-sm-2">First Name</dt>
    <dd class="col-sm-10">@Model.FirstName</dd>

    <dt class="col-sm-2">Last Name</dt>
    <dd class="col-sm-10">@Model.LastName</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Phone</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
